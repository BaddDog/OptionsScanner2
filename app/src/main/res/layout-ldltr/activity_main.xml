<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Reset Data"
        android:visibility="visible"
        tools:layout_margin="5dp" />

    <Button
        android:id="@+id/auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Sign In"
        tools:layout_margin="5dp" />

    <Button
        android:id="@+id/AnalyzeOptions"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Analyze Options"
        android:visibility="visible"
        tools:layout_margin="5dp" />


    <Button
        android:id="@+id/updateOptions"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Update Options"
        android:visibility="visible"
        tools:layout_margin="5dp" />

    <Button
        android:id="@+id/PartialUpdate"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Partial Update"
        android:visibility="visible"
        tools:layout_margin="5dp" />

    <Button
        android:id="@+id/StrategyViews"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="View Strategies"
        android:visibility="visible" />

    <TextView
        android:id="@+id/ProgressText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:text="Test"
        android:textSize="@dimen/treeview_bottom_padding"
        android:visibility="visible"
        tools:backgroundTint="@color/gray"
        tools:textColor="@android:color/black"
        tools:textSize="20dp" />


</LinearLayout>